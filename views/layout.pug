doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/normalize.css")
    link(rel="stylesheet", href="/css/app.css")
    title #{nombrePagina} 
  body 
      header.barra
        //- h1 UpTask - Administrador de Proyectos
        a(class="home" href="/") UpTask - Administrador de Proyectos
        a(href="#") Cerrar Sesion 

      main.contenedor 
        aside.contenedor-proyectos
          .panel.crear-proyecto      
            a(href="/nuevo-proyecto").boton Nuevo Proyecto      
          .panel.lista-proyectos
            h2 Proyectos 
            ui#proyectos.proyectos 
              if(proyectosdb)
                each proyecto in proyectosdb
                  li 
                    a(href=`/proyectos/${proyecto.url}`) #{proyecto.nombre}
        block contenido

        //- pre= vardump(proyectosdb)
